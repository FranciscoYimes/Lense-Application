<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lense.lense.SenaticaActivity"
    tools:showIn="@layout/activity_senatica">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:text="Escoge una letra:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/letter_a"
                        android:src="@drawable/letter_a"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_b"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_b"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_c"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_c"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <ImageView
                        android:id="@+id/letter_d"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_d"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_e"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_e"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/letter_f"
                        android:src="@drawable/letter_f"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_g"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_g"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_h"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_h"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <ImageView
                        android:id="@+id/letter_i"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_i"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/letter_j"
                        android:src="@drawable/letter_j"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_k"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_k"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_l"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_l"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <ImageView
                        android:id="@+id/letter_m"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_m"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_n"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_n"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/letter_nn"
                        android:src="@drawable/letter_nn"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_o"
