                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_u"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_u"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_v"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_v"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/letter_w"
                        android:src="@drawable/letter_w"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_x"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_x"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_y"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_y"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_z"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_z"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
