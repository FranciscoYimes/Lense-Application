                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_p"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_p"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <ImageView
                        android:id="@+id/letter_q"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_q"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/letter_r"
                        android:src="@drawable/letter_r"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_s"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/letter_s"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <ImageView
                        android:id="@+id/letter_t"
                        android:layout_marginLeft="10dp"
