<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_dictionary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lense.lense.DictionaryActivity"
    tools:showIn="@layout/app_bar_dictionary">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/new_color_buttom"
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/translateImageView"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:background="@color/new_color_back"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="7dp"
                        android:id="@+id/category_text"
                        android:textColor="#fff"
                        android:textSize="19dp"
                        android:text="Categoría: Vocal"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#fff"
                        android:id="@+id/sub_category_text"
                        android:textSize="19dp"
                        android:text="Subcategoría: Vocal"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/search_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_marginTop="5dp"
                        style="@style/SpecialEditText"
                        android:id="@+id/translate_text"
                        android:layout_width="270dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        android:hint="Palabra a traducir"
                        android:inputType="textEmailAddress" />

                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/search_icon"
                        android:textSize="20sp"
                        android:id="@+id/translateButton" />

                </LinearLayout>

                <Button
                    style="@style/AccentButton"
                    android:id="@+id/go_to_abc"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Dactilológico" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/abc_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="@style/AccentButton"
                    android:id="@+id/back_to_search"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Volver al Buscador" />

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">

                    <Button
                        android:id="@+id/a"
                        android:background="@drawable/letter_a"
                        android:layout_marginLeft="1dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/b"
                        android:background="@drawable/letter_b"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/c"
                        android:background="@drawable/letter_c"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/d"
                        android:background="@drawable/letter_d"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/e"
                        android:background="@drawable/letter_e"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/f"
                        android:background="@drawable/letter_f"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/g"
                        android:background="@drawable/letter_g"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">

                    <Button
                        android:id="@+id/h"
                        android:background="@drawable/letter_h"
                        android:layout_marginLeft="1dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/i"
                        android:background="@drawable/letter_i"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/j"
                        android:background="@drawable/letter_j"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/k"
                        android:background="@drawable/letter_k"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/l"
                        android:background="@drawable/letter_l"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/m"
                        android:background="@drawable/letter_m"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/n"
                        android:background="@drawable/letter_n"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">
                    <Button
                        android:id="@+id/nn"
                        android:background="@drawable/letter_nn"
                        android:layout_marginLeft="1dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/o"
                        android:background="@drawable/letter_o"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/p"
                        android:background="@drawable/letter_p"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/q"
                        android:background="@drawable/letter_q"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/r"
                        android:background="@drawable/letter_r"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/s"
                        android:background="@drawable/letter_s"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/t"
                        android:background="@drawable/letter_t"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">

                    <Button
                        android:id="@+id/u"
                        android:background="@drawable/letter_u"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/v"
                        android:background="@drawable/letter_v"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/w"
                        android:background="@drawable/letter_w"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/x"
                        android:background="@drawable/letter_x"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/y"
                        android:background="@drawable/letter_y"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/z"
                        android:background="@drawable/letter_z"
                        android:layout_marginLeft="2dp"
                        android:layout_width="45dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
